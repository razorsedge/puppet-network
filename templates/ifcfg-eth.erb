DEVICE=<%= interface %>
BOOTPROTO=<%= bootproto %>
<% if !macaddress.empty? %>HWADDR=<%= macaddress %>
<% end -%>
ONBOOT=<%= onboot %>
HOTPLUG=<%= onboot %>
TYPE=Ethernet
