###
### File managed by Puppet
###
DEVICE=<%= @interface %>
BOOTPROTO=<%= @bootproto %>
ONPARENT=<%= @onparent %>
TYPE=Ethernet
<% if @ipaddress %>IPADDR=<%= @ipaddress %>
<% end -%>
<% if @netmask %>NETMASK=<%= @netmask %>
<% end -%>
<% if @gateway %>GATEWAY=<%= @gateway %>
<% end -%>
<% if @ipv6address %>IPV6ADDR=<%= @ipv6address %>
<% end -%>
<% if !@noaliasrouting %>NO_ALIASROUTING=no
<% else %>NO_ALIASROUTING=yes
<% end -%>
<% if @userctl %>USERCTL=yes
<% end -%>
<% if @zone %>ZONE=<%= @zone %>
<% end -%>
<% if @metric %>METRIC=<%= @metric %>
<% end -%>
NM_CONTROLLED=no
