###
### File managed by Puppet
###
NETWORKING=yes
<% if !@ipv6networking %>NETWORKING_IPV6=no
<% else %>NETWORKING_IPV6=yes
<% if !@ipv6gateway.empty? %>IPV6_DEFAULTGW=<%= @ipv6gateway %>
<% end -%>
<% if !@ipv6defaultdev.empty? %>IPV6_DEFAULTDEV=<%= @ipv6defaultdev %>
<% end -%>
<% end -%>
<% if !@hostname.empty? %>HOSTNAME=<%= @hostname %>
<% else %>HOSTNAME=<%= scope.lookupvar('::fqdn') %>
<% end -%>
<% if !@gateway.empty? %>GATEWAY=<%= @gateway %>
<% end -%>
<% if !@gatewaydev.empty? %>GATEWAYDEV=<%= @gatewaydev %>
<% end -%>
<% if !@nisdomain.empty? %>NISDOMAIN=<%= @nisdomain %>
<% end -%>
<% if !@vlan.empty? %>VLAN=<%= @vlan %>
<% end -%>
<% if !@nozeroconf.empty? %>NOZEROCONF=<%= @nozeroconf %>
<% end -%>
